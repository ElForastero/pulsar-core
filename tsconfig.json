{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**"
  ]
}
